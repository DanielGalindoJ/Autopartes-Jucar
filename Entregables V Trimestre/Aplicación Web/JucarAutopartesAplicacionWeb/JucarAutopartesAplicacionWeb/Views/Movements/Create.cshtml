@model JucarAutopartesAplicacionWeb.Models.Products.Movement

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo Registro</h1>

<h4>Movimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RawMaterialID" class="control-label"></label>
                <select asp-for="RawMaterialID" class ="form-control" asp-items="ViewBag.RawMaterialID"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" placeholder="100*" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MovementType" class="control-label"></label>
                <select asp-for="MovementType" class="form-control">
                    <option value="Entrada">Entrada</option>
                    <option value="Salida">Salida</option>
                </select>
                <span asp-validation-for="MovementType" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MovementDate" class="control-label"></label>
                <input type="text" name="MovementDate" class="form-control datepicker" placeholder="Ejm: 2023-06-28" />
                <span asp-validation-for="MovementDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Regresar al Inicio</a>
</div>

