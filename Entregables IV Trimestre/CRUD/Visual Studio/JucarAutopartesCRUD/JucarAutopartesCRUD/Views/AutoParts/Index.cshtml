                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModificationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subcategory.SubcategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AutoPartID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AutoPartID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AutoPartID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
