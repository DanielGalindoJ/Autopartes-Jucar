@model JucarAutopartesAplicacionWeb.Models.Products.Movement

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Actualizar Datos Movimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovementID" />
            <div class="form-group">
                <label asp-for="RawMaterialID" class="control-label"></label>
                <select asp-for="RawMaterialID" class="form-control" asp-items="ViewBag.RawMaterialID"></select>
                <span asp-validation-for="RawMaterialID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MovementType" class="control-label"></label>
                <select asp-for="MovementType" class="form-control">
                    <option value="Entrada">Entrada</option>
                    <option value="Salida">Salida</option>
                </select>
                <span asp-validation-for="MovementType" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MovementDate" class="control-label"></label>
                <input asp-for="MovementDate" class="form-control datepicker" />
                <span asp-validation-for="MovementDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Regresar al Inicio</a>
</div>

