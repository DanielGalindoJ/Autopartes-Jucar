@model JucarAutopartesAplicacionWeb.Models.Products.Movement

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Registor</h1>

<h3>Estas seguro que quieres eliminar este Movimiento?</h3>
<div>
    <h4>Detalles del Movimiento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RawMaterial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RawMaterial.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovementType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovementType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovementDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovementDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModificationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModificationDate)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="MovementID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
