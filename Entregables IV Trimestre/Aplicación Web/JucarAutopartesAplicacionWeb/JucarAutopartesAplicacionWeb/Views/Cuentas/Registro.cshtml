@model JucarAutopartesAplicacionWeb.Models.ViewModels.Users.RegisterViewModel

@{
	ViewData["Title"] = "Registro de Usuarios";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
	<div class="card-body">
		<h3 class="card-title text-center">Nuevo Usuario</h3>
		<form asp-controller="Cuentas" asp-action="Registro" method="post">
			<div class="text-danger" asp-validation-summary="ModelOnly"></div>

			<div class="row mt-4">

				<div class="col-sm-6">

					<div class="mb-3">
						<label asp-for="FirstName" class="col-md-4"></label>
						<input asp-for="FirstName" class="form-control" placeholder="Ejm: Miguel" />
						<span asp-validation-for="FirstName" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="SecondName" class="col-md-4"></label>
						<input asp-for="SecondName" class="form-control" placeholder="Ejm: Angel" />
						<span asp-validation-for="SecondName" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="FirstSurname" class="col-md-4"></label>
						<input asp-for="FirstSurname" class="form-control" placeholder="Ejm: Moyano" />
						<span asp-validation-for="FirstSurname" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="SecondSurname" class="col-md-4"></label>
						<input asp-for="SecondSurname" class="form-control" placeholder="Ejm:  Palacio" />
						<span asp-validation-for="SecondSurname" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="DocumentType" class="col-md-4"></label>
						<select asp-for="DocumentType" class="form-control">
							<option value="TarjetaIdentidad">Tarjeta Identidad</option>
							<option value="CédulaCiudadnia">Cédula Ciudadanía</option>
							<option value="CédulaExtranjería">Cédula Extranjería</option>
						</select>
						<span asp-validation-for="DocumentType" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="DocumentNumber" class="col-md-4"></label>
						<input asp-for="DocumentNumber" class="form-control" placeholder="Ejm: 1014596240" />
						<span asp-validation-for="DocumentNumber" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Email" class="col-md-4"></label>
						<input asp-for="Email" class="form-control" placeholder="Ejm: miguelpokerafce@gmail.com" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>


				</div>

				<div class="col-sm-6">

					<div class="mb-3">
						<label asp-for="Sex" class="col-md-4"></label>
						<select asp-for="Sex" class="form-control">
							<option value="Masculino">Masculino</option>
							<option value="Femenino">Femenino</option>
						</select>
						<span asp-validation-for="Sex" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="BirthDate" class="col-md-4"></label>
						<input type="text" name="BirthDate" class="form-control" placeholder="Ejm: 2005-03-09" id="datepicker" />
						<span asp-validation-for="BirthDate" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="BirthCity" class="col-md-4"></label>
						<input asp-for="BirthCity" class="form-control" placeholder="Ejm: Medellín" />
						<span asp-validation-for="BirthCity" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="CityResidence" class="col-md-4"></label>
						<input asp-for="CityResidence" class="form-control" placeholder="Ejm: Bogotá" />
						<span asp-validation-for="CityResidence" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="PhoneType" class="col-md-4"></label>
						<select asp-for="PhoneType" class="form-control">
							<option value="Fijo">Fijo</option>
							<option value="Celular">Celular</option>
							<option value="Personal">Personal</option>
							<option value="Trabajo">Trabajo</option>
							<option value="Oficina">Oficina</option>
						</select>
						<span asp-validation-for="PhoneType" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="PhoneNumber" class="col-md-4"></label>
						<input asp-for="PhoneNumber" class="form-control" placeholder="Ejm: 3192627425" />
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Password" class="col-md-4"></label>
						<input asp-for="Password" class="form-control" placeholder="Ejm: Migue123*" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="ConfirmedPassword" class="col-md-4"></label>
						<input asp-for="ConfirmedPassword" class="form-control" />
						<span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
					</div>


				</div>

				<div class="row">
					<div class="col-sm-10 offset-2">
						<button type="submit" class="btn btn-success w-75 btn-lg">Registrarse</button>
					</div>
				</div>

			</div>

		</form>
	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}